@model EintechDevTest.Web.Models.CreatePersonViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create Person</h2>
<hr />
@if (ViewBag.FailureMessage != null)
{
    <div class="alert alert-danger" role="alert">Add user failed: @ViewBag.FailureMessage
    </div>
}
    <div class="row">
        <div class="col-md-4">
            <form action="/People/Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Group</label>
                    <select asp-for="GroupID" asp-items="ViewBag.GroupID" class="form-control"><option></option></select>
                    <span asp-validation-for="GroupID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
